    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch chain_test in debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/buildd/tests/chain_test",
            "args": ["--log_level=all", "--report_level=detailed", "--run_test=block_tests/transaction_invalidated_in_cache"],
            "stopAtEntry": false,
           "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch app_test in debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/buildd/tests/app_test",
            "args": ["--log_level=all", "--report_level=detailed"],
            "stopAtEntry": false,
           "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}